<% provide(:title, "トピック編集") %>
<div class="container">
  <h2 class="page-tit">トピック編集</h2>
  <div class="topic-form">
    <%= form_for(@topic) do |f|%>
      <div class="field topic-form-tit">
        <%= f.text_field :title, placeholder: "タイトル【必須】", class: 'form-wide form-control' %>
      </div>
      <div class="topic-form-categories">
        <%= f.label "カテゴリー" %>
        <ul id="topic-categories">
        </ul>
        <%= hidden_field_tag :category_hidden, @category_list %>
      </div>
      <div class="field">
        <%= f.text_area :description, placeholder: "トピック概要説明", class: 'form-wide form-control' %>
      </div>
      <div class="actions">
        <%= f.submit "更新する", class: 'btn' %>
      </div>
    <% end %>
  </div>
</div>

<%= javascript_tag do %>
var Topic = {
  all_category_list: <%= raw @all_category_list %>
};
<% end %>