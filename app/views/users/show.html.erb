<%= provide(:title, @user.name)%>
<div class="container">
  <div class="row">
    <h2 class="page-tit">作成したトピック</h2>
    <div class="col-md-8 topic-area">
      <% if @user.topics.any? %>
        <ol class="topics">
          <%= render @topics %>
        </ol>
        <div class="paginate-area">
          <%= paginate @topics %>
        </div>
      <% else %>
        作成したトピックはまだありません
      <% end %>
    </div>
    <div class="col-md-4">
      <%= render "shared/user_info", user: @user %>
      <%= render "shared/category_index", categories: @categories %>
    </div>
  </div>
</div>
